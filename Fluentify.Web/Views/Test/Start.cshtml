@model Fluentify.Web.Models.TestViewModel

<style>
    .test-title {
        font-size: 32px;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .question-number {
        font-size: 24px;
        font-weight: bold;
        color: #666;
        margin-bottom: 10px;
    }

    .question-text {
        font-size: 20px;
        color: #333;
        margin-bottom: 20px;
    }

    .error-message {
        color: #ff0000;
        margin-bottom: 10px;
    }

    .answer-input {
        width: 300px;
        height: 40px;
        padding: 5px;
        font-size: 16px;
    }

    .submit-button {
        background-color: #4caf50;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
    }

    .completed-message {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-top: 20px;
    }
</style>

<h1 class="test-title">Початок тесту</h1>

@if (Model.CurrentTaskIndex >= 0 && Model.CurrentTaskIndex < Model.MathTasks.Count)
{
    <p class="question-number">Питання №@Model.CurrentTaskIndex</p>
    <p class="question-text">@Model.MathTasks[Model.CurrentTaskIndex].Question</p>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="error-message">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" asp-action="Start">
        <input type="hidden" asp-for="CurrentTaskIndex" />
        <input type="hidden" asp-for="MathTasks" />
        <input type="hidden" asp-for="Score" />

        <div>
            <label>Введіть вашу відповідь:</label>
            <input type="text" asp-for="Answer" class="answer-input" />
        </div>

        <button type="submit" class="submit-button">Відповісти</button>
    </form>
}
else
{
    <p class="completed-message">Завершено!</p>
}
