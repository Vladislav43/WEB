<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Voievoda.Fluentify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fluentify.Web.styles.css" asp-append-version="true" />
    <style>
 
        body {
            background: linear-gradient(45deg, #d29cff, #59d1ff, #ffd659, #ff59c1, #d29cff, #59d1ff, #ffd659);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }
        
        /* Style the navbar links */
        .navbar-nav .nav-link {
            font-weight: bold;
            color: white;
            text-shadow: 1px 1px 1px yellow;
            transition: all 0.2s ease;
        }
        
        /* Add hover effect to navbar links */
        .navbar-nav .nav-link:hover {
            color: #ffc107;
        }
        
        /* Style the footer */
        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        
        /* Style the footer link */
        .footer a {
            color: #343a40;
            transition: all 0.2s ease;
        }
        
        /* Add hover effect to footer link */
        .footer a:hover {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Voievoda.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/swagger">Swagger UI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Voievoda Vladislav - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
